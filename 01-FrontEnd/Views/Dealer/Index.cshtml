<div class="modal fade" id="ajax" role="basic" aria-hidden="true" style="width:auto">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Modal title</h4>
            </div>
            <div class="modal-body" style="width:auto">
                <img src="../../assets/global/img/loading-spinner-grey.gif" alt="" class="loading">
                <span>
                    &nbsp;&nbsp;Loading...
                </span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn blue">Guardar</button>
                <button type="button" class="btn default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

    @section Scripts{

        <script>
            $(document).ready(function () {
                debugger;
                getData();

            });

            function getData() {
                var table = $('#GridDealer');

                table.dataTable({
                    language: {
                        aria: {
                            sortAscending: ": Activar para organizar columna de forma ascendente",
                            sortDescending: ": Activar para organizar columna de forma descendente"
                        },
                        emptyTable: "No hay datos disponibles",
                        info: "Mostranado del _START_ al _END_ de _TOTAL_ registros",
                        infoEmpty: "No entries found",
                        infoFiltered: "(filtered1 from _MAX_ total entries)",
                        lengthMenu: "Mostrar _MENU_ registros",
                        search: "Buscar:",
                        zeroRecords: "No se han encontrado registros"
                    },
                    paginate: true,
                    ajax: {
                        url: "/Dealer/DealerList",
                        type: "POST",
                        dataType: "json",
                        data: {
                            jtStartIndex: 0,
                            jtPageSize: 10,
                            jtSorting: 'ASC'
                        }
                    },
                    columns: [{
                        data: "Id", "autoWidth": true
                    }, {
                        data: "DealerCode", "autoWidth": true
                    }, {
                        data: "DealerName", "autoWidth": true
                    }, {
                        data: "DealerPresident", "autoWidth": true
                    }, {
                        data: "Address", "autoWidth": true
                    }, {
                        data: "ProvinceId", "autoWidth": true
                    }, {
                        data: "Status", "autoWidth": true
                    }, {
                        data: "CreatorUser.UserName", "autoWidth": true
                    }, {
                        data: "CreationTime", "autoWidth": true
                    },
                    {
                        data: "LastModifierUser.UserName", "autoWidth": true
                    },
                    {
                        data: "LastModificationTime", "autoWidth": true
                    },
                    {
                        data: "Id", "autoWidth": true
                    }],
                    columnDefs: [{  // set default column settings
                        orderable: false,
                        targets: -1,
                        render: function (data, type, Dealer) {
                            debugger;
                            var $span = $('<span></span>');
                            var p = "'";
                            
                            var r = $('<a class=" btn green" href="/Dealer/GeneralEdit/' + Dealer.Id + '">Editar</a>');
                            r.appendTo($span);
                            return $span[0].innerHTML;
                        }
                    }],
                });
            }
        </script>


    }
