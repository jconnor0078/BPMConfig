@model BasicInfoContactTypeViewModel

<!--Begin MiniHeaderForAllPages-->
@Html.Partial("_MiniHeaderForAllPages", Model.miniHeader)
<div class="portlet light">
    <div class="portlet-body">

        <!--Begin blue contect-->
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-folder"></i>Tipo de Contactos
                </div>
            </div>
        </div>
        <!--End blue contect-->
        <!--Begin Page-->
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Managed Table
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>

                    <a href="javascript:;" class="reload">
                    </a>

                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <button id="sample_editable_1_new" class="btn green">
                                    Add New <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>

                    </div>
                </div>


                <table class="table table-striped table-bordered table-hover" id="HO">
                    <thead>
                        <tr>
                            <th class="table-checkbox">
                                <input type="checkbox" class="group-checkable" data-set="#sample_1 .checkboxes" />
                            </th>
                            <th>
                                Id
                            </th>
                            <th>
                                Descripción
                            </th>
                            <th>
                                Enumerador
                            </th>
                            <th>
                                Usuario de Creación
                            </th>
                            <th>
                                Fecha de Creación
                            </th>
                            <th>
                                Usuario de la ultima actualización
                            </th>
                            <th>
                                Fecha de la ultima actualización
                            </th>
                        </tr>
                    </thead>
                    
                </table>




            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
        <!--End Page-->

    </div>
</div>



@section Scripts{

    <script>
        $(document).ready(function () {
            debugger;
            GetData('true');

        });


        function GetData(IsInicial)
        {
            debugger;
            
            //HO_length is top
            //HO_paginate paginate
            var HO_lengths = IsInicial=true?'10': document.getElementsByName("HO_length")[0].value;
            var HO_paginates = IsInicial = true ? '1' : $("#HO_paginate")[0].innerText;

            var table = $('#HO'); 
            // begin first table
            table.dataTable({

                // Internationalisation. For more info refer to http://datatables.net/manual/i18n
                "language": {
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    },
                    "emptyTable": "No hay datos disponibles",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "No entries found",
                    "infoFiltered": "(filtered1 from _MAX_ total entries)",
                    "lengthMenu": "Show _MENU_ entries",
                    "search": "Search:",
                    "zeroRecords": "No matching records found"
                },
                paginate:true,
                // Or you can use remote translation file
                //"language": {
                //   url: '//cdn.datatables.net/plug-ins/3cfcc339e89/i18n/Portuguese.json'
                //},

                // Uncomment below line("dom" parameter) to fix the dropdown overflow issue in the datatable cells. The default datatable layout
                // setup uses scrollable div(table-scrollable) with overflow:auto to enable vertical scroll(see: assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js). 
                // So when dropdowns used the scrollable div should be removed. 
                //"dom": "<'row'<'col-md-6 col-sm-12'l><'col-md-6 col-sm-12'f>r>t<'row'<'col-md-5 col-sm-12'i><'col-md-7 col-sm-12'p>>",

                "bStateSave": true, // save datatable state(pagination, sort, etc) in cookie.
                "ajax": {
                    "url": "/DealerContactType/ContactTypeList",
                    "type": "POST",
                    "dataType": "json",
                    "data": {
                        jtStartIndex: HO_lengths,
                        jtPageSize: HO_paginates,
                        jtSorting: 'Id ASC'
                    }
                },
                "columns": [{
                    "data": "Id", "autoWidth": true
                }, {
                    "data": "Id", "autoWidth": true
                }, {
                    "data": "Description", "autoWidth": true
                }, {
                    "data": "EnumName", "autoWidth": true
                }, {
                    "data": "CreatorUserId", "autoWidth": true
                }, {
                    "data": "CreationTime", "autoWidth": true
                },
                {
                    "data": "LastModifierUserId", "autoWidth": true
                },
                {
                    "data": "LastModificationTime", "autoWidth": true
                }],
                "lengthMenu": [
                    [5, 15, 20, -1],
                    [5, 15, 20, "All"] // change per page values here
                ],
                // set the initial value
                "pageLength": 5,
                "pagingType": "bootstrap_full_number",
                "iDisplayLength":8,
                "language": {
                    "search": "Mi Busqueda: ",
                    "lengthMenu": "  _MENU_ records",
                    "paginate": {
                        "previous": "Prev",
                        "next": "Next",
                        "last": "Last",
                        "first": "First"
                    }
                },
                "columnDefs": [{  // set default column settings
                    'orderable': false,
                    'targets': [0]
                }, {
                    "searchable": false,
                    "targets": [0]
                }],
                "order": [
                    [1, "asc"]
                ], // set first column as a default sort by asc
            });
        }
    </script>


}