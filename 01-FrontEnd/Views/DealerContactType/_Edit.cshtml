@model BasicInfoContactTypeViewModel


@using (Html.BeginForm("Update", "DealerContactType", FormMethod.Post))
{
    @Html.HiddenFor(x => x.id)
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title">Editando</h4>
    </div>
    <div class="modal-body">
        <div class="alert-container"></div>
        <br />
        <div class="form-group">
            <label>Descripción</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
            <span data-key="Description" class="form-validation-failed"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn default" data-dismiss="modal">Close</button>
        <button  data-ajax="true"  type="submit" class="btn blue">Save changes</button>
    </div>
}
    